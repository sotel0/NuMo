<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NuMo.CameraPage">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <StackLayout>
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">
      <Button x:Name ="cameraButton" Text = "Take Photo" Clicked="TakePhotoButton_OnClicked"/>
      <Button x:Name ="photoAlbumButton" Text = "Upload Photo" Clicked="PickPhotoButton_OnClicked"/>
    </StackLayout>
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <Image x:Name="MainImage" WidthRequest="200" HeightRequest="200" />
    </StackLayout>
  </StackLayout>
</ContentPage>