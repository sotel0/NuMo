<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="NuMo.DRIPage">
	<ContentPage.ToolbarItems>
	<ToolbarItem Name="?" x:Name = "toolbar_question" Clicked = "question"/>
    <ToolbarItem Name="Customize" x:Name = "toolbar_customize" Clicked = "customize"/>
	<ToolbarItem Name="Reset" x:Name = "toolbar_reset" Clicked="reset"/>
  </ContentPage.ToolbarItems>
	<ContentPage.Content>
		<TableView>
			<TableRoot>
			<TableSection Title = "Macronutrients">
			<ViewCell>
				<StackLayout Orientation="Horizontal">
				<Label Text = "Calories: " Margin="18,10,0,0"/>
				<Entry Text = "Value here" Margin="0,0,50,0" x:Name="dri_calories"
                       HorizontalOptions="EndAndExpand" WidthRequest = "65"/>
						</StackLayout>
					</ViewCell>

					<ViewCell>
				<StackLayout Orientation="Horizontal">
				<Label Text = "Total Carbohydrate (g) " Margin="18,10,0,0"/>
				<Entry Text = "Value here" Margin="0,0,50,0" x:Name="dri_totalCarbs" 
                       HorizontalOptions="EndAndExpand" WidthRequest = "65"/>
						</StackLayout>
					</ViewCell>

					<ViewCell>
				<StackLayout Orientation="Horizontal">
				<Label Text = "Dietary Fiber (g) " Margin="18,10,0,0"/>
				<Entry Text = "Value here" Margin="0,0,50,0" x:Name="dri_dietaryFiber" 
                       HorizontalOptions="EndAndExpand" WidthRequest = "65"/>
						</StackLayout>
					</ViewCell>

					<ViewCell>
				<StackLayout Orientation="Horizontal">
				<Label Text = "Net Carboyhydrates (g) " Margin="18,10,0,0"/>
