<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="NuMo.NutrFacts">
	<ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name = "mainStack" Padding = "20,10,0,0">
                <Label x:Name = "descrView">
                </Label>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Entry x:Name="quantity" x:FieldModifier="public" Placeholder ="Number of" Keyboard="Keyboard.Numeric" Text="{Binding Quantity}" HorizontalTextAlignment="Center"/>
                    <Picker x:Name="UnitsPicker" x:FieldModifier="public" Title=" Units                                  " >
                      <Picker.Items>
                        <x:String>Gram(s)</x:String>
                      </Picker.Items>
                    </Picker>
                </StackLayout>
                <Button Text="Save" HorizontalOptions="Center" Clicked="saveButtonClicked" />

                <Grid>
    <!--                nutrition facts and labels-->
                </Grid>

            </StackLayout>
        </ScrollView>
	</ContentPage.Content>
</ContentPage>
